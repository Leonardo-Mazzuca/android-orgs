<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        tools:context=".ui.activity.ProductFormActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        >

        <EditText
            android:id="@+id/form_product_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Name"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/form_product_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="@id/form_product_item_name"
            app:layout_constraintStart_toStartOf="@id/form_product_item_name"
            app:layout_constraintTop_toBottomOf="@id/form_product_item_name"


            />

        <EditText
            android:id="@+id/form_product_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:inputType="numberDecimal"
            app:layout_constraintEnd_toEndOf="@id/form_product_item_description"
            app:layout_constraintStart_toStartOf="@id/form_product_item_description"
            app:layout_constraintTop_toBottomOf="@id/form_product_item_description"


            />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Save"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintTop_toBottomOf="@id/form_product_item_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/primary_color"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>